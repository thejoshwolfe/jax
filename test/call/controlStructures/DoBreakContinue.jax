public class DoBreakContinue {
    public static int findThis(String[] arr, String findThis) {
        int foundYou = 0;
        int i = 0;
        do {
            String item = arr[i++];
            if (item == null) continue;
            if (item.equals(findThis)) {
                foundYou = i;
                break;
            };
        } while (i < arr.length);
        return foundYou;
    };

